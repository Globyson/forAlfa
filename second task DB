CREATE TABLE EMPLOYEE(
ID int primary key NOT NULL auto_increment,
DEPARTMENT_ID int NOT NULL,
CHIEF_ID int NOT NULL,
NAME varchar(255) NOT NULL,
POSITION varchar(255) NOT NULL,
SALARY float NOT NULL,
FOREIGN KEY (CHIEF_ID) REFERENCES EMPLOYEE(ID)
)

(SELECT NAME,POSITION FROM employee) UNION (SELECT NAME,POSITION FROM employee);
SELECT NAME FROM employee WHERE DEPARTMENT_ID = 1 AND CHIEF_ID = 2 AND salary > (SELECT avg(salary) FROM employee WHERE DEPARTMENT_ID = 1 AND CHIEF_ID = 1);
